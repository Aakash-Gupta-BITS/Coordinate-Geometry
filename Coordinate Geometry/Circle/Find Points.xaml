        <TextBox x:Name="In_k" HorizontalAlignment="Left" Margin="314,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" PlaceholderText="k"/>
        <TextBox x:Name="In_r" HorizontalAlignment="Left" Margin="473,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" PlaceholderText="r"/>
        <TextBlock HorizontalAlignment="Left" Margin="71,48,0,0" TextWrapping="Wrap" Text="(x -" VerticalAlignment="Top" FontSize="25" Height="37"/>
        <TextBlock HorizontalAlignment="Left" Margin="225,48,0,0" TextWrapping="Wrap" Text=")² + (y -" VerticalAlignment="Top" FontSize="25" Height="37"/>
        <TextBlock HorizontalAlignment="Left" Margin="427,48,0,0" TextWrapping="Wrap" Text=")² = "  VerticalAlignment="Top" FontSize="25" Height="37"/>
        <TextBlock HorizontalAlignment="Left" Margin="586,48,0,0" TextWrapping="Wrap" Text="²"  VerticalAlignment="Top" FontSize="25" Height="37"/>
        <TextBox x:Name="Out_x" HorizontalAlignment="Left" Margin="134,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="275" PlaceholderText="x" KeyUp="Out_x_KeyUp" />
