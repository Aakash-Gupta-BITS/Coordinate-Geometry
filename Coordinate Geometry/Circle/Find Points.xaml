        <TextBox x:Name="In_x" HorizontalAlignment="Left" Margin="683,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" PlaceholderText="1" KeyUp="In_x_KeyUp"/>
        <TextBox x:Name="In_y" HorizontalAlignment="Left" Margin="802,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" PlaceholderText="1" KeyUp="In_x_KeyUp"/>
        <TextBox x:Name="In_A" HorizontalAlignment="Left" Margin="921,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" PlaceholderText="A" KeyUp="In_x_KeyUp"/>
        <TextBox x:Name="In_B" HorizontalAlignment="Left" Margin="1030,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" PlaceholderText="B" KeyUp="In_x_KeyUp"/>
        <TextBox x:Name="In_C" HorizontalAlignment="Left" Margin="1135,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" PlaceholderText="C" KeyUp="In_x_KeyUp"/>
        <TextBlock HorizontalAlignment="Left" Margin="752,47,0,0" TextWrapping="Wrap" Text="x² +" VerticalAlignment="Top" FontSize="25" Height="37"/>
        <TextBlock HorizontalAlignment="Left" Margin="871,47,0,0" TextWrapping="Wrap" Text="y² +" VerticalAlignment="Top" FontSize="25" Height="37"/>
        <TextBlock HorizontalAlignment="Left" Margin="990,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="25" Height="37" Text="x +"/>
        <TextBlock HorizontalAlignment="Left" Margin="1204,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="25" Height="37" Text="= 0"/>
        <TextBlock HorizontalAlignment="Left" Margin="1099,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="25" Height="37" Text="y +"/>

    </Grid>
</Page>
